<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chitiet_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/highlight"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="8dp"
    android:orientation="vertical">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/backgroundetails"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:src="@drawable/cv1"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/DetailsImage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/c1"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/nameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bài 1:Thực hành layout"
            android:textColor="#d703082b"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/TimeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Hours, 12 Lessions"
            android:textColor="#6003082b"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="65dp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>